# Printer
# Linux: device path (udev symlink to /dev/usb/lp0)
PRINTER_DEVICE=/dev/thermalprinter
# Windows dev: uncomment and set printer name + backend
# PRINTER_NAME=RONGTA 80mm Series Printer(5)
# PRINTER_BACKEND=win32raw
# Use PRINTER_BACKEND=dummy for testing without a printer

# Server (bind to Tailscale IP on Pi, 0.0.0.0 for dev)
HOST=0.0.0.0
PORT=8080
DEBUG=False

# Auth (leave empty to disable auth in development)
API_TOKEN=
ADMIN_TOKEN=

# Queue
QUEUE_MAX_DEPTH=20
JOB_TIMEOUT=30

# Rate Limiting
RATE_LIMIT=10 per minute
MAX_CONTENT_LENGTH=65536

# Logging (empty LOG_FILE = stdout only, good for journald)
LOG_FILE=
LOG_LEVEL=INFO
